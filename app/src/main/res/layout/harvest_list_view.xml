<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.codingdemos.tablayout.Read_Harvest_Firebase"
    android:id="@+id/harvest_list"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="#2F587C"
            android:gravity="center_horizontal"
            android:text="ประวัติการเก็บเห็ด"
            android:textAlignment="center"
            android:textColor="#F7F5F5"
            android:textSize="30sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/HarvestRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        tools:listitem="@layout/harvest_adapter" />


</LinearLayout>
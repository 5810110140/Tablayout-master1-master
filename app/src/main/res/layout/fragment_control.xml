<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#19191B"
  tools:context="com.codingdemos.tablayout.ControlFragment"
    android:id="@+id/fragmentcontrol">

  <!-- TODO: Update blank fragment layout -->
  <RelativeLayout
      android:id="@+id/layoutpipe"
      android:layout_width="match_parent"
      android:layout_height="100sp"
      android:background="#DFF2FA"
      android:orientation="horizontal"
      android:layout_marginTop="8dp"
      >

    <ImageView
        android:id="@+id/picpipe"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/pipes"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textwaterpipe"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@+id/picpipe"
        android:layout_toRightOf="@+id/picpipe"
        android:text="Waterpipe"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/toggleButtonpipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/textwaterpipe"
        android:layout_toRightOf="@+id/textwaterpipe"
        android:textOff="ปิด"
        android:textOn="เปิด"
        android:text="@string/togglebutton" />


  </RelativeLayout>

  <RelativeLayout

      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_marginTop="8dp"
      android:background="#DFF2FA"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/piccoolingfan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/coolingfan1" />

    <TextView
        android:id="@+id/textcoolingfan"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/piccoolingfan"
        android:layout_toRightOf="@+id/piccoolingfan"
        android:text="Coolingfan"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/toggleButtonfan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/textcoolingfan"
        android:layout_toRightOf="@+id/textcoolingfan"
        android:textOff="ปิด"
        android:textOn="เปิด"
        android:text="@string/togglebutton"
        />



  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:orientation="horizontal"
      android:background="#DFF2FA"
      android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/heater"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/heating"
         />

    <TextView
        android:id="@+id/textheater"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@id/heater"
        android:layout_toRightOf="@id/heater"
        android:text="Heating"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/toggleButtonheater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/textheater"
        android:layout_toRightOf="@+id/textheater"
        android:textOff="ปิด"
        android:textOn="เปิด"
        android:text="@string/togglebutton" />


  </RelativeLayout>

</LinearLayout>

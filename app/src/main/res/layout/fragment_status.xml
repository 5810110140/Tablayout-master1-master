    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#DFF2FA"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/temperature"
            android:layout_width="61dp"
            android:layout_height="64dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/temperature1" />

        <TextView
            android:id="@+id/temperaturepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="37dp"
            android:layout_toEndOf="@+id/temperature"
            android:layout_toRightOf="@+id/temperature"
            android:text="@string/temperature"
            android:textColor="	#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/datatemperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_toEndOf="@+id/temperaturepic"
            android:layout_toRightOf="@+id/temperaturepic"
            android:text="--"
            android:textSize="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/datatemperature"
            android:layout_toRightOf="@+id/datatemperature"
            android:text="°C"
            android:textColor="	#000000"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#DFF2FA"
        android:layout_height="100dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/humidity"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/humidity1"/>

        <TextView
            android:id="@+id/humiditytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="35dp"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/humidity"
            android:layout_toRightOf="@+id/humidity"
            android:text="Humidity"
            android:textColor="	#000000"/>

        <TextView
            android:id="@+id/datahumidity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/humiditytext"
            android:layout_toRightOf="@+id/humiditytext"
            android:text="--"
            android:textSize="60dp" />

        <TextView
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/datahumidity"
            android:layout_toRightOf="@+id/datahumidity"
            android:text="%RH"
            android:textColor="	#000000"
            android:textSize="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#DFF2FA"
        android:layout_marginTop="6dp">
        
        <ImageView
            android:id="@+id/picsunny"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/sun1"/>

        <TextView
            android:id="@+id/textlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@id/picsunny"
            android:layout_toRightOf="@id/picsunny"
            android:text="Light"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/datalight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"

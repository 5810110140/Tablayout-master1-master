        <TextView
            android:id="@+id/textleveltemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="91dp"
            android:layout_marginBottom="10dp"
            android:textColor="#686565"
            android:text="textleveltemp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FDFDFD"
        android:layout_height="120dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/humidity"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/humidity1"/>

        <TextView
            android:id="@+id/humiditytext"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="37dp"
            android:layout_toEndOf="@+id/humidity"
            android:layout_toRightOf="@+id/humidity"
            android:text="Humidity"
            android:textColor="	#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/datahumidity"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/humiditytext"
            android:layout_toRightOf="@+id/humiditytext"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="--"
            android:textSize="30sp" />


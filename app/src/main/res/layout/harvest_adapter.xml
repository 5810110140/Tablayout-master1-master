<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/T_harvest_value"
                android:layout_marginStart="47dp"
                android:layout_marginLeft="47dp"
                android:layout_marginBottom="14dp"
                android:layout_toEndOf="@+id/textView7"
                android:layout_toRightOf="@+id/textView7"

                android:text="น้ำหนัก"
                android:textColor="#131212"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/T_harvest_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="30dp"
                android:layout_toEndOf="@+id/T_harvest_value"
                android:layout_toRightOf="@+id/T_harvest_value"
                android:gravity="center"
                android:text="กก"
                android:textAlignment="center"
                android:textColor="#131212"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/T_harvest_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="30dp"
                android:layout_toEndOf="@+id/T_harvest_weight"
                android:layout_toRightOf="@+id/T_harvest_weight"
                android:gravity="center"
                android:text="กิโลกรัม"
                android:textAlignment="center"
                android:textColor="#131212"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/T_harvest_value"
                android:layout_marginStart="44dp"
                android:layout_marginLeft="44dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"

                android:text="จำนวน"
                android:textColor="#131212"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/T_harvest_type"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginBottom="15dp"
                android:text="ชนิดเห็ด"
                android:textColor="#131212"

                android:textSize="20sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textColor="#F7F3F3"
                android:background="#023F30"
                android:text="วัน/เดือน/ปี"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/T_harvest_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="3dp"
                android:background="#023F30"
                android:gravity="left"
                android:text="วันที่"

                android:textColor="#FFFDFD"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/T_harvest_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginBottom="30dp"
                android:text="ชนิดเห็ด"
                android:textColor="#2B2828"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/T_harvest_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="44dp"

                android:layout_marginLeft="44dp"
                android:layout_marginBottom="34dp"
                android:layout_toEndOf="@+id/T_harvest_type"
                android:layout_toRightOf="@+id/T_harvest_type"
                android:text="จำนวน"
                android:textColor="#252424"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

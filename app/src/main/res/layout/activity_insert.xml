<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codingdemos.tablayout.Insert"
    android:background="#E9F2FA"
    tools:ignore="InvalidId">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="#B0E5F3"
            android:gravity="center_horizontal"
            android:text="บันทึกการเพาะปลูก"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="35sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/texttime"
            android:layout_width="120dp"
            android:layout_height="45dp"

            android:layout_below="@+id/btntime"
            android:layout_marginStart="58dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/textdate"
            android:layout_toRightOf="@+id/textdate"
            android:gravity="center"
            android:text="Time"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btntime"
            android:layout_width="120dp"
            android:layout_height="60dp"

            android:layout_below="@+id/slotvalue1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="207dp"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="22dp"
            android:text="เลือกเวลา" />

        <TextView
            android:id="@+id/textdate"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_below="@+id/btndate"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btndate"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@+id/slotvalue1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="68dp"

            android:layout_marginRight="68dp"
            android:text="เลือกวันที่" />

        <Spinner
            android:id="@+id/slotvalue1"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/mushtype1"
            android:layout_toRightOf="@+id/mushtype1"
            android:background="@color/spinner"
            android:entries="@array/Total"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/mushtype1"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:background="@color/spinner"
            android:entries="@array/mushroom"
            android:textAlignment="center" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <Button
            android:id="@+id/return1"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginBottom="26dp"
            android:background="@color/colorbutton"
            android:text="ย้อนกลับ"
            android:textColor="#FAFAFA" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp"
            android:layout_marginBottom="26dp"
            android:background="@color/colorbutton"
            android:text="บันทึก"
            android:textColor="#FAFAFA" />

    </RelativeLayout>

</LinearLayout>
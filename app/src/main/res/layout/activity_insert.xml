<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codingdemos.tablayout.Insert"
    tools:ignore="InvalidId">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="#DFF2FA"
            android:gravity="center_horizontal"
            android:text="บันทึกการเพาะปลูก"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="35sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/slotvalue3"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_below="@+id/slotvalue2"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/mushtype3"
            android:layout_toRightOf="@+id/mushtype3"
            android:entries="@array/Total"
            android:textAlignment="center"
            android:background="@color/spinner"/>

        <Spinner
            android:id="@+id/slotvalue2"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_below="@+id/slotvalue1"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/mushtype2"
            android:layout_toRightOf="@+id/mushtype2"
            android:entries="@array/Total"
            android:textAlignment="center"
            android:background="@color/spinner"/>

        <Spinner
            android:id="@+id/slotvalue1"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/mushtype1"
            android:layout_toRightOf="@+id/mushtype1"
            android:entries="@array/Total"
            android:textAlignment="center"
            android:background="@color/spinner"/>

        <Spinner
            android:id="@+id/mushtype2"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_below="@+id/mushtype1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:background="@color/spinner"
            android:entries="@array/mushroom" />

        <Spinner
            android:id="@+id/mushtype1"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="13dp"
            android:entries="@array/mushroom"
            android:textAlignment="center"
            android:background="@color/spinner"/>

        <Spinner
            android:id="@+id/mushtype3"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_below="@+id/mushtype2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="11dp"
            android:background="@color/spinner"
            android:entries="@array/mushroom"
            android:textAlignment="center" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btndate"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"

            android:text="เลือกวันที่" />

        <TextView
            android:id="@+id/textdate"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Date"
            android:textSize="20dp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btntime"
            android:layout_width="100dp"
            android:layout_height="55dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:text="เลือกเวลา" />

        <TextView
            android:id="@+id/texttime"
            android:layout_width="150dp"
            android:layout_height="match_parent"

            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Time"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <Button
            android:id="@+id/return1"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginBottom="25dp"
            android:text="ย้อนกลับ"
            android:background="@color/colorbutton"/>

        <Button
            android:id="@+id/btnsave"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:layout_marginBottom="25dp"
            android:background="@color/colorbutton"
            android:text="บันทึก" />

    </RelativeLayout>

</LinearLayout>